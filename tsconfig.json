{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2016",
    "jsx": "react-jsx",

    /* Modules */
    "module": "commonjs",

    /* JavaScript Support */
    "allowJs": true,
    "checkJs": false,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,

    /* Completeness */
    "skipLibCheck": true
  }
}
